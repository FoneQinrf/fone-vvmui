{
  "name": "vvmui",
  "npm": {
    "tag": "beta"
  },
  "version": "3.0.0-beta.2",
  "author": "Fone`峰",
  "main": "lib/vvmui.umd.js",
  "module": "lib/vvmui.es.js",
  "style": "lib/style.css",
  "typings": "lib/index.d.ts",
  "description": "Vue3组件库",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FoneQinrf/fone-vvmui.git"
  },
  "files": [
    "lib",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev:vite": "vite --open --force",
    "build": "vite build",
    "serve": "vite preview",
    "build:vvmui": "vite build --config vite.config.vvmui.ts",
    "build:prod": "npm run build:vvmui && node config/config.mkdir.types.js && node config/config.copy.themes.js && npm run build",
    "dev:ui": "vite --config vite.config.vvmui.ts",
    "dev": "concurrently \"npm run dev:vite\" \"npm run watch:css\"",
    "watch:css": "gulp --gulpfile gulpfile.js",
    "test": "jest"
  },
  "dependencies": {
    "highlight.js": "^10.7.2",
    "lodash": "^4.17.21",
    "vite-plugin-md": "^0.6.3",
    "vue": "^3.0.9",
    "vue-router": "^4.0.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vitejs/plugin-vue": "^1.2.1",
    "@vitejs/plugin-vue-jsx": "^1.1.3",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.6",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.1",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-watch": "^5.0.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "postcss-aspect-ratio-mini": "^1.1.0",
    "postcss-px-to-viewport": "^1.1.1",
    "postcss-write-svg": "^3.0.1",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "ts-jest": "^26.5.6",
    "typescript": "^4.1.3",
    "vite": "^2.1.5",
    "vue-jest": "^5.0.0-alpha.8",
    "vue-tsc": "^0.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue,scss,tsx,css}": "prettier --write"
  },
  "keywords": [
    "vvmui",
    "vue",
    "vue3",
    "webpack",
    "vue component",
    "vue3 component",
    "vite"
  ]
}
